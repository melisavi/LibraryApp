<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="15-01-2025-initschema.xml" author="rog">
        <createTable tableName="authors" remarks="table of authors">
            <column name="id" type="integer" autoIncrement="true" startWith="1" incrementBy="1">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="birth_date" type="timestamp with time zone"/>
        </createTable>

        <createTable tableName="books" remarks="table of books">
            <column name="id" type="integer" autoIncrement="true" startWith="1" incrementBy="1">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="integer">
                <constraints foreignKeyName="book_author_id" references="authors(id)" deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>